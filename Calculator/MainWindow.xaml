<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator"
        mc:Ignorable="d"
        Title="Калькулятор доходности" Height="800" Width="1200">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*"  
                           MinHeight="350"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Депозит" 
                   Grid.Column="0"
                   Grid.Row="0"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Начальный лот" 
                   Grid.Column="0" 
                   Grid.Row="1"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Take" 
                   Grid.Column="0" 
                   Grid.Row="2"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Stop" 
                   Grid.Column="0" 
                   Grid.Row="3"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Комиссия" 
                   Grid.Column="0" 
                   Grid.Row="4"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Процент рибыли" 
                   Grid.Column="0" 
                   Grid.Row="5"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Кол-во сделок" 
                   Grid.Column="0" 
                   Grid.Row="6"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Мин % депо" 
                   Grid.Column="0" 
                   Grid.Row="7"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="ГО" 
                   Grid.Column="0" 
                   Grid.Row="8"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>

        <TextBox x:Name="_depo" 
                   Grid.Column="1" 
                   Grid.Row="0"
                   Margin="10"
                   Text="depo"
                   FontWeight="DemiBold"/>
        <TextBox x:Name="_startLot" 
                   Grid.Column="1" 
                   Grid.Row="1"
                   Margin="10"
                   Text="lot"
                   FontWeight="DemiBold"/>
        <TextBox x:Name="_take" 
                   Grid.Column="1" 
                   Grid.Row="2"
                   Margin="10"
                   Text="take"
                   FontWeight="DemiBold"/>
        <TextBox x:Name="_stop" 
                   Grid.Column="1" 
                   Grid.Row="3"
                   Margin="10"
                   Text="stop"
                   FontWeight="DemiBold"/>
        <TextBox x:Name="_fee" 
                   Grid.Column="1" 
                   Grid.Row="4"
                   Margin="10"
                   Text="fee"
                   FontWeight="DemiBold"/>
        <TextBox x:Name="_profit" 
                   Grid.Column="1" 
                   Grid.Row="5"
                   Margin="10"
                   Text="profit"
                   FontWeight="DemiBold"/>
        <TextBox x:Name="_deals" 
                   Grid.Column="1" 
                   Grid.Row="6"
                   Margin="10"
                   Text="deals"
                   FontWeight="DemiBold"/>
        <TextBox x:Name="_minDepoPrc" 
                   Grid.Column="1" 
                   Grid.Row="7"
                   Margin="10"
                   Text="min depo prc"
                   FontWeight="DemiBold"/>
        <TextBox x:Name="_go" 
                   Grid.Column="1" 
                   Grid.Row="8"
                   Margin="10"
                   Text="go"
                   FontWeight="DemiBold"/>

        <ComboBox x:Name="_methodSelector"
                  Grid.Column="0"
                  Grid.Row="9"
                  Margin="10, 5, 10, 5"></ComboBox>
        <Button x:Name="_calculateButton"
                  Grid.Column="1"
                  Grid.Row="9"
                  Margin="10, 5, 10, 5"
                  Click="CalculateButtonClick">Расчитать</Button>

        <GroupBox Header="Таблица результатов"
                  Grid.Column="2"
                  Grid.Row="0"
                  Grid.RowSpan="10"
                  Margin="0, 5, 10, 5">
            <DataGrid x:Name="_dataGrid" 
                      Margin="5"
                      FontSize="14"
                      FontWeight="DemiBold">
<!--                
                <DataGrid.Columns>
                    <DataGridTextColumn>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
-->                
            </DataGrid>
        </GroupBox>

    </Grid>

</Window>
