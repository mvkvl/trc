<Window x:Class="TradesAnalyser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradesAnalyser"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*"  
                           MinHeight="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Депозит" 
                   Grid.Column="0"
                   Grid.Row="0"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Начальный лот" 
                   Grid.Column="0" 
                   Grid.Row="1"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Take" 
                   Grid.Column="0" 
                   Grid.Row="2"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Stop" 
                   Grid.Column="0" 
                   Grid.Row="3"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Комиссия" 
                   Grid.Column="0" 
                   Grid.Row="4"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Процент прибыли" 
                   Grid.Column="0" 
                   Grid.Row="5"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Кол-во сделок" 
                   Grid.Column="0" 
                   Grid.Row="6"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="Мин % депо" 
                   Grid.Column="0" 
                   Grid.Row="7"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBlock Text="ГО" 
                   Grid.Column="0" 
                   Grid.Row="8"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>

        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="0"
                   Margin="10"
                   Text="depo"
                   FontWeight="DemiBold"/>
        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="1"
                   Margin="10"
                   Text="lot"
                   FontWeight="DemiBold"/>
        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="2"
                   Margin="10"
                   Text="take"
                   FontWeight="DemiBold"/>
        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="3"
                   Margin="10"
                   Text="stop"
                   FontWeight="DemiBold"/>
        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="4"
                   Margin="10"
                   Text="fee"
                   FontWeight="DemiBold"/>
        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="5"
                   Margin="10"
                   Text="profit"
                   FontWeight="DemiBold"/>
        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="6"
                   Margin="10"
                   Text="deals"
                   FontWeight="DemiBold"/>
        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="7"
                   Margin="10"
                   Text="min depo prc"
                   FontWeight="DemiBold"/>
        <TextBox 
                   Grid.Column="1" 
                   Grid.Row="8"
                   Margin="10"
                   Text="go"
                   FontWeight="DemiBold"/>

        <ComboBox 
                  Grid.Column="0"
                  Grid.Row="9"
                  Margin="10, 5, 10, 5"></ComboBox>
        <Button 
                  Grid.Column="1"
                  Grid.Row="9"
                  Margin="10, 5, 10, 5"
                  >Расчитать</Button>

        <GroupBox Header="Таблица результатов"
                  Grid.Column="2"
                  Grid.Row="0"
                  Grid.RowSpan="10"
                  Margin="0, 5, 10, 5">
            <DataGrid 
                      Margin="5"
                      FontSize="14"
                      FontWeight="DemiBold">
            </DataGrid>
        </GroupBox>

        <Canvas 
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.Row="10"
                Background="LightSlateGray"
                Margin="10, 10, 10, 10"/>

    </Grid>

</Window>
