<Window x:Class="TradesAnalyser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradesAnalyser"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*"  
                           MinHeight="50"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Депозит" 
                   Grid.Column="0"
                   Grid.Row="0"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <TextBox   Text="{Binding Depo}"
                   Grid.Column="1" 
                   Grid.Row="0"
                   Margin="10"
                   FontWeight="DemiBold"/>

        <TextBlock Text="Сделки" 
                   Grid.Column="0"
                   Grid.Row="1"
                   Margin="10, 10, 5, 5"
                   FontWeight="DemiBold"/>
        <Button   Command="{Binding CmdFileOpen}"
                  Grid.Column="1"
                  Grid.Row="1"
                  Margin="10, 5, 10, 5"
                  >Загрузить</Button>

        <ComboBox 
                  Grid.Column="0"
                  Grid.Row="9"
                  Margin="10, 5, 10, 5"></ComboBox>
        <Button   Command="{Binding CmdCalculate}"
                  Grid.Column="1"
                  Grid.Row="9"
                  Margin="10, 5, 10, 5"
                  >Расчитать</Button>

        <GroupBox 
                  Header="Таблица сделок"
                  Grid.Column="2"
                  Grid.Row="0"
                  Grid.RowSpan="10"
                  Margin="0, 5, 10, 5">
            <DataGrid 
                      Margin="5"
                      FontSize="14"
                      FontWeight="DemiBold">
            </DataGrid>
        </GroupBox>

        <Canvas 
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Grid.Row="10"
                Background="LightSlateGray"
                Margin="10, 10, 10, 10"/>

    </Grid>

</Window>
